#!/bin/bash

get_os() {
  if   [ -e /etc/debian_version ] || [ -e /etc/debian_release ]; then
    # Check Ubuntu or Debian
    if [ -e /etc/lsb-release ]; then
      # Ubuntu
      if [ -f /proc/sys/fs/binfmt_misc/WSLInterop ]; then
        type='wsl_ubuntu'
      else
        type='ubuntu'
      fi
    fi
  elif [ "$(uname)" == 'Darwin' ]; then 
    type='mac'
  else
    # Other
    type='unkown'
  fi
  echo ${type}
}

get_os